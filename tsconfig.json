{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "bundler",
    // Bundler mode
    "paths": {
      "@cmd/*": [
        "src/commands/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@templates/*": [
        "src/templates/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@prompts/*": [
        "src/prompts/*"
      ],
      "@test/*": [
        "test/*"
      ]
    },
    // Best practices
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": false,
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": false,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
